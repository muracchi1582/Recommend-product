!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Recommend-product
    %script{src: "https://js.pay.jp/", type: "text/javascript"}
    = csrf_meta_tags
    = include_gon
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application','data-turbolinks-track': 'reload'
  %body
    .wrapper
      -if user_signed_in?
        .header
          .header__left
            =link_to "Recommend-product",root_path,class: "index__title"
          .search__top
            = form_with(url: search_products_path, local: true, method: :get) do |f|
              = f.text_field :keyword, id: :product_id,class:"search__field",placeholder:"タイトルで探す"
              = f.submit 'Search', class:"search__bottun"
          .header__right       
            =link_to "新規投稿","/products/new",class: "list"
            =link_to "ログアウト",destroy_user_session_path, class:"list",method: :delete
            =link_to "動画削除", "/users",class:"list"
            =link_to "購入履歴", history_purchase_path,class:"list"
        
      -else
        .header
          .header__left
            =link_to "Recommend-product",root_path,class: "index__title"
          .search__top
            = form_with(url: search_products_path, local: true, method: :get) do |f|
              = f.text_field :keyword, id: :product_id, class:"search__field",placeholder:"タイトルで探す"
              = f.submit 'Search', class:"search__bottun"
            %ul
              %li
                =link_to "ログイン", new_user_session_path,class:"list"
              %li 
                =link_to "新規登録", signup_index_path,class:"list"
      = yield